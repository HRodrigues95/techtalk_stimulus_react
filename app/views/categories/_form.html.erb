<%= form_with(model: category, data: { controller: "enhanced-form", "enhanced-form-target": "form" }) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control", required: true, placeholder: "Enter category name",
      data: { controller: "enhanced-input", "enhanced-input-required-value": true, "enhanced-input-length-value": 3, "enhanced-input-target": "input", action: "input->enhanced-input#validateInput" } %>
  </div>

  <div class="field">
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description, class: "form-control", placeholder: "Enter category description" %>
  </div>

  <div class="field">
    <%= form.submit data: { "enhanced-form-target": "submit" } %>
  </div>
<% end %>
