<%= turbo_stream.replace dom_id(@todo) do %>
  <%= render @todo %>
<% end %>

<%# Refresh the todos list %>
<%= turbo_stream.replace "todos" do %>
  <%= turbo_frame_tag "todos", src: todos_path, loading: "lazy" %>
<% end %>

<%= turbo_stream_action_tag "refresh_react", component: "CompletedTodos", event: "event.todo_changed" %>
